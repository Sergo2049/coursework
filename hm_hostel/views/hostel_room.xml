<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="hostel_room_form_view">
        <field name="model">hostel.room</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <!-- TODO -->
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="type" widget="radio"
                               options="{'horizontal' : True}"/>
                        <field name="price"/>
                        <field name="currency_id"/>
                    </group>
                        <field name="bed_ids" nolabel="1"
                               widget="one2many_list">
                            <tree string="Beds" editable="bottom">
                                <field name="name"/>
<!--                                <field name="room_id"/>-->
                                <field name="room_id"/>
                            </tree>
                        </field>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="hostel_room_search_view">
        <field name="model">hostel.room</field>
        <field name="arch" type="xml">
            <search>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="hostel_room_tree_view">
        <field name="model">hostel.room</field>
        <field name="arch" type="xml">
            <tree>
                <!-- TODO -->
                <field name="name"/>
                <field name="type"/>
                <field name="price"/>
            </tree>
        </field>
    </record>

