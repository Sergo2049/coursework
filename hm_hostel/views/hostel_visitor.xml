<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="hostel_visitor_form_view">
        <field name="name">hostel.visitor.form.view</field>
        <field name="model">hostel.visitor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="phone"/>
                            <field name="gender" widget="radio"
                                   options="{'horizontal' : True}"/>
                            <field name="passport_data"/>
                        </group>
                        <group>
                            <field name="image_256" widget="image"
                                   class="oe_avatar" nolabel="1"/>
                        </group>
                    </group>
                    <group string="Booking History" expand="1">
                        <field name="booking_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="hostel_visitor_search_view">
        <field name="name">hostel.visitor.search.view</field>
        <field name="model">hostel.visitor</field>
        <field name="arch" type="xml">
            <search>
                <field name="display_name" operator="ilike"/>
                <field name="phone" operator="like"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="hostel_visitor_tree_view">
        <field name="name">hostel.visitor.tree.view</field>
        <field name="model">hostel.visitor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="phone"/>
                <field name="gender"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="hostel_visitor_act_window">
        <field name="name">Visitor</field>
        <field name="res_model">hostel.visitor</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.menu" id="hostel_visitor_menu">
        <field name="name">Visitor</field>
        <field name="parent_id" ref="hostel_root_menu"/>
        <field name="action" ref="hostel_visitor_act_window"/>
        <field name="sequence" eval="20"/>
    </record>

</odoo>
