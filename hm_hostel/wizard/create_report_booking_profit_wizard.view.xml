        <field name="name">create_.report.booking.profit.wizard.view.form</field>
        <field name="model">create.report.booking.profit.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>
                <footer>
                    <button name="%(action_create_booking_wizard)d"
                            string="Create report booking pfofit"
                            type="action"
